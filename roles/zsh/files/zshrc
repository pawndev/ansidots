if [[ $DISPLAY ]]; then
    # If not running interactively, do not do anything
    [[ $- != *i* ]] && return
    # Only start tmux when opening a "real" terminal emulator
    [[ -z "$TMUX" && "$TERM_PROGRAM" != "vscode" ]] && exec tmux
fi

export AWS_PROFILE=etf1awsaccess

